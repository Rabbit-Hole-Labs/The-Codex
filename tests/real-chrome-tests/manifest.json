{
  "manifest_version": 3,
  "name": "The Codex - Real Test Harness",
  "version": "1.0.0",
  "description": "Real Chrome extension test harness for storage corruption scenarios",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "chrome_url_overrides": {
    "newtab": "test-runner.html"
  },
  "action": {
    "default_popup": "test-popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
